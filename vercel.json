{
    "version": 2,
    "public": true,
    "builds": [
      {
        "src": "server.js",
        "use": "@now/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/public/(.*)",
        "dest": "/$1"
      }
    ]
  }